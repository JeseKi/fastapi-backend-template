# 应用环境
APP_ENV=dev

# CORS 允许来源（JSON 数组、逗号分隔或单值）
ALLOWED_ORIGINS=["http://localhost:5173"]

# 应用密钥（示例值，请在生产中覆盖）
APP_SECRET_KEY=change-me

# 数据库文件路径（相对项目根）
DATABASE_PATH=database.db

# 端口（仅 run.py 使用）
PORT=8000

# 日志级别：debug/info/warning/error
LOG_LEVEL=info

# 后端地址
VITE_API_BASE_URL=http://localhost:8000